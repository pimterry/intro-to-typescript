@import 'default'
@import 'prism/themes/prism-okaidia.css'
@import url("../satatic/open-sans");

@font-face {
  font-family:'Open Sans';
  font-style:normal;
  font-weight:400;
  src:local('Open Sans'), url("../static/open-sans.woff2") format('woff2');
}

typeScriptBlue = #007acc;

body {
  background-color: #fafafa;
  color: #404040;
  font-family: 'Open Sans', sans;
  font-size: 18px;
}

article {
  transition: none !important;
}

h1 {
  font-size: 72px;
  line-height: 82px;
  letter-spacing: -2px;
  margin-bottom: 16px;
}

a {
  text-decoration: none;
}

h2 {
  font-size: 42px;
  letter-spacing: -1px;
  margin-bottom: 8px;
}

.typescript {    
  font-family: 'Open Sans', sans;
  color: typeScriptBlue;
}

.bespoke-slide {
  background-color: rgba(255, 255, 255, 0);  
  transition: none;
  padding: 20px;

  aside {
      display: none;
  }
}

.todo:before {
  content: "TODO: "
  color: #f00;
  font-style: italic;
  font-weight: bolder;
}

.full-slide {
  font-size: 90pt;
  line-height: 98%;
}

.fullish-slide {
  @extend .full-slide
  font-size: 73pt;
}

ul {
  list-style: none;
  margin: 10px 0;
  text-align: left;

  li {
    margin-bottom: 12px;
  }
}

address {
  letter-spacing: -0.8px;
  margin: 70px auto 0 auto;
  text-align: left;
  width: 600px;
  font-style: normal;
  line-height: 150%
  font-size: 130%;
  
  .author {
    font-size: 120%;
  }

  .author, a {
    font-weight: bolder;
  }

  .org {
    color: #6ea0b0;

    .i {
      color: #00548e;
    }
  }

  a {
    color: inherit;
    &:hover {
      font-style: underline;
    }
  }
}

pre {
  padding: 26px !important;
  font-size: 14px;
  min-width: 80%;
}

.sideBySide {
  display: flex;
  flex-direction: row;
  justify-content: space-around;

  > * {
    min-width: initial;
    width: initial;
    margin: 0.5em 0.4em !important;
    padding: 26px 10px;
    font-size: 65%;
  }
}

.highlight {
  font-weight: bolder;
  color: #c13038;
}

.lowlight {
  opacity: 0.6;
}

.title, .finish {
  background: url('../static/title-background.png');
  background-size: cover;
  background-position: center;
}

h3 {
  margin-bottom: 0;
}

.logo-big {
  width: 60%;
}

.token.property, .token.tag, .token.constant, .token.symbol, .token.deleted {
  color: #FF3E74;
}

small {
  font-size: 50%;
  color: #888;
}

:not(pre) > code[class*="language-"] {
  padding: .3em .8em;
  border-radius: .3em;
  margin: 0 5px;
}

li.bespoke-bullet-inactive {
  transform: initial;
  -webkit-transform: initial;
  transition: initial;

  opacity: 1;
  visibility: hidden;
}
